{
    "name": "wink-snippets",
    "displayName": "wink-snippets",
    "description": "vue3+ts常用代码片段",
    "version": "1.0.2",
    "author": {
        "name": "向文可",
        "email": "13202090601@163.com",
        "url": "https://xiangwenke.love"
    },
    "publisher": "xwink",
    "icon": "icon.ico",
    "repository": {
        "type": "github",
        "url": "https://github.com/x-wink/wink-snippets"
    },
    "engines": {
        "vscode": "^1.0.0"
    },
    "categories": [
        "Snippets"
    ],
    "contributes": {
        "languages": [
            {
                "id": "vue",
                "aliases": [
                    "Vue",
                    "vue"
                ],
                "extensions": [
                    ".vue"
                ]
            }
        ],
        "snippets": [
            {
                "language": "typescript",
                "path": "./snippets/typescript.json"
            },
            {
                "language": "html",
                "path": "./snippets/html.json"
            },
            {
                "language": "vue",
                "path": "./snippets/vue.json"
            }
        ]
    },
    "scripts": {
        "doc": "ts-node ./scripts/doc.ts && pnpm prettier",
        "version": "conventional-changelog -p angular -i CHANGELOG.md -s && git add CHANGELOG.md",
        "build": "vsce package",
        "release": "pnpm doc && bumpp package.json --commit \"release: v%s\" --push --all --tag && pnpm run build && vsce publish",
        "prettier": "prettier --write ./**/*.{vue,ts,tsx,js,jsx,css,less,json,md,html}"
    },
    "devDependencies": {
        "@types/node": "^20.2.5",
        "@vscode/vsce": "^2.19.0",
        "@xwink/eslint-config": "^1.0.0",
        "bumpp": "^9.1.0",
        "conventional-changelog-cli": "^2.2.2",
        "prettier": "^2.8.8",
        "ts-node": "^10.9.1",
        "typescript": "^5.1.3"
    }
}
